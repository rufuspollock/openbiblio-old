@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix fresnel:  <http://www.w3.org/2004/09/fresnel#> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/> .
@prefix frbr:     <http://purl.org/vocab/frbr/core#> .
@prefix dc:       <http://purl.org/dc/terms/> .
@prefix dbpprop:  <http://dbpedia.org/property/> .
@prefix :         <http://bibliographica.org/lens/frbr_work#> .

<http://bibliographica.org/lens/frbr_work> rdfs:label "FRBR Work" .

:frbrPersonDefaultLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:instanceLensDomain frbr:Person ;
	fresnel:group :frbrGroup ;
	fresnel:showProperties (
		foaf:name
	) .

:frbrWorkDefaultLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain frbr:Work ;
	fresnel:group :frbrGroup ;
	fresnel:showProperties (
		dc:title
		dc:date
		[ a fresnel:PropertyDescription ;
		  fresnel:property frbr:creator ;
		  fresnel:sublens :frbrPersonDefaultLens ]
	) .

:frbrGroup a fresnel:Group ;
	fresnel:stylesheetLink <http://bibliographica.org/css/frbr.css> .

:workFormat a fresnel:Format ;
	fresnel:classFormatDomain frbr:Work ;
	fresnel:resourceStyle "border: dotted 1px red;"^^fresnel:stylingInstructions ;
	fresnel:group :frbrGroup .

:creatorFormat a fresnel:Format ;
	fresnel:propertyFormatDomain frbr:creator ;
	fresnel:value fresnel:externalLink ;
	fresnel:label "Author" ;
	fresnel:group :frbrGroup .

:titleFormat a fresnel:Format ;
	fresnel:propertyFormatDomain dc:title ;
	fresnel:label fresnel:none;
	fresnel:propertyStyle "h1_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h1"^^fresnel:styleClass ;
	fresnel:group :frbrGroup .

:dateFormat a fresnel:Format ;
	fresnel:propertyFormatDomain dc:date ;
	fresnel:label "Published" ;
	fresnel:group :frbrGroup .

:nameFormat a fresnel:Format ;
	fresnel:propertyFormatDomain foaf:name ;
	fresnel:label fresnel:none;
	fresnel:propertyStyle "h2_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h2"^^fresnel:styleClass ;
	fresnel:group :frbrGroup .

